<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.ss.bottomnavigation.BottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:mode="phone">

        <com.ss.bottomnavigation.TabItem
            android:id="@+id/tab_navigation_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textDirection="rtl"
            app:tab_icon="@drawable/ic_library_books_black_24dp"
            app:tab_text="@string/news"
            app:tab_text_color="@color/black" />

        <com.ss.bottomnavigation.TabItem
            android:id="@+id/tab_navigation_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textDirection="rtl"
            app:tab_icon="@drawable/ic_remove_red_eye_black_24dp"
            app:tab_text="@string/bests"
            app:tab_text_color="@color/black"

            />

        <com.ss.bottomnavigation.TabItem
            android:id="@+id/tab_navigation_saved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textDirection="rtl"
            app:tab_icon="@drawable/ic_bookmark_black_24dp"
            app:tab_text="@string/saved"
            app:tab_text_color="@color/black" />


    </com.ss.bottomnavigation.BottomNavigation>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>